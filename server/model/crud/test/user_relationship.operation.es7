const UserRelationship = userRelationshipCrud.model;


const dropCollection = utils.getDropCollection(userRelationshipCrud.binding.db, cfg.mongodb.collection.name.user);


const [generateFromSeed, generateFromSeedList] = utils.getFromSeedOperationGroup(UserRelationship);


const ensureIndexes = (callback) => UserRelationship.ensureIndexes(callback);


const reset = (userRelationshipSeedList) => (callback) =>
    async.series(
        [
            (cb) => operation.dropCollection(cb),
            (cb) => operation.ensureIndexes(cb),
