module.exports = {
    getMyRelationship: getMyRelationshipRoute,
    addMyRelationshipUserFollowing: addMyRelationshipUserFollowingRoute,
    removeMyRelationshipUserFollowing: removeMyRelationshipUserFollowingRoute,
};